@model BookLibrary.Models.Login

<div class="d-flex justify-content-center align-items-start vh-100 pt-5">
    <div class="card shadow-lg p-4 rounded-4" style="width: 25rem;">
        <h2 class="text-center mb-4">Login</h2>
        <form asp-action="Login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" asp-for="Email" placeholder="Enter your email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" id="Password" asp-for="Password" placeholder="Enter your password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Login</button>
            </div>
        </form>

        <div class="mt-3 text-center">
            <span>Don't have an account?</span>
            <a asp-action="Register" asp-controller="UserAcc" class="text-primary">Register here</a>
        </div>
    </div>
</div>
