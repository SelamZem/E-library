@model BookLibrary.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<p>Are you sure you want to delete the book <strong>@Model.Title</strong>?</p>
<p>Author: @Model.Author</p>
<p>Publisher: @Model.Publisher</p>
<p>Quantity: @Model.Quantity</p>
<p>Language: @Model.Language</p>
<p><img src="@Url.Content("~/images/books/" + Model.BImgPath)" alt="Book Image" width="100" /></p>

<form method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Cancel</a>
</form>
