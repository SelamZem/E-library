@model IEnumerable<BookLibrary.Models.Book>

@{
    Layout = "~/Views/Shared/_Lviews.cshtml";  
}


<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@book.BImgPath" class="card-img-top" alt="@book.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">Author: @book.Author</p>
                        <a href="@Url.Action("Details", "Review", new { bookId = book.BookId })" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
